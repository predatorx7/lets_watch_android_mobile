<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppBarTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/design_tab_text_size</item>
        <item name="android:textColor">@drawable/main_appbar_tab_indicator_text</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:fontFamily">@font/raleway</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- The default font for RecyclerView items is too small.
    The margin is a simple delimiter between the words. -->
    <style name="movie_title">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.LetsWatchTheme.Caption</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Components-->
    <style name="ViewDetailsToolbarStyle" parent="@style/Widget.MaterialComponents.Button.TextButton">
        <item name="android:insetRight">@dimen/zero</item>
        <item name="android:insetLeft">@dimen/zero</item>
        <item name="android:paddingRight">@dimen/zero</item>
        <item name="android:paddingLeft">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="iconTint">@color/white</item>
        <item name="iconGravity">top</item>
        <item name="rippleColor">@color/exo_white_opacity_70</item>
        <item name="android:textAppearance">@style/TextAppearance.LetsWatchTheme.Caption</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Season selector style -->
    <style name="SeasonSelectorStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="endIconDrawable">@drawable/ic_fluent_chevron_down_12_filled</item>
        <item name="android:shadowColor">@null</item>
        <item name="elevation">@dimen/zero</item>
        <item name="itemRippleColor">@null</item>
        <item name="boxBackgroundColor">@color/transparent</item>
        <item name="android:paddingTop">@dimen/zero</item>
        <item name="background">@color/transparent</item>
        <item name="endIconTint">@color/mtrl_filled_icon_tint</item>
        <item name="startIconTint">@color/mtrl_filled_icon_tint</item>
        <item name="boxCollapsedPaddingTop">@dimen/zero</item>
        <item name="boxStrokeColor">@null</item>
    </style>

    <!--
    ~   Bottom Sheets
    ~   Has a copy in values-27
    -->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?attr/textAppearanceBody2</item>
    </style>

    <style name="VideoPlayerActionButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">70dp</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:elevation">6dp</item>
    </style>
</resources>
